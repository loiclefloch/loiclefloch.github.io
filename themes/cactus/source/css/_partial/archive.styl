#archive
.post-year
    list-style-type: none
    margin-left: -16px

  .post-list
    padding: 0

    .post-item
      margin-bottom: 1rem
      margin-left: 0
      list-style-type: none

      .meta
        display: block
        margin-right: 16px
        min-width: 100px
        color: $color-meta
        font-size: 14px

  @media (min-width: 480px)
    .post-year
      margin-left: 0

    .post-list
      .post-item
        display: flex
        margin-left: 1rem
        margin-bottom: 4px

        .meta
          text-align: left
